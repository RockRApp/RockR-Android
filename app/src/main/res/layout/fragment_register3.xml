<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rockr.elliottewing.com.rockr.Register3Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Step 3"
                android:id="@+id/textView"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="75sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Who are you looking for?"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary genre"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genre_input"
                style="@android:style/Widget.Holo.Spinner" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary genre"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genre2_input"
                style="@android:style/Widget.Holo.Spinner" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary instrument"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrument_input"
                style="@android:style/Widget.Holo.Spinner" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary instrument  "/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrument2_input"
                style="@android:style/Widget.Holo.Spinner" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How far away are you looking?"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/distance_input"
                style="@android:style/Widget.Holo.Spinner" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:background="@drawable/rockr_button"
                android:id="@+id/button_submit"
                android:textSize="35sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="50px" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:background="@drawable/rockr_button"
                android:textSize="35sp"
                android:id="@+id/button_back" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
